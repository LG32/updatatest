/* pages/firstpage/firstpage.wxss */
@import "/wxSearch/wxSearch.wxss";

.container {
  height: 100%;
}

.question_title {
  position: relative;
  width: 700rpx;
  padding: 40rpx 50rpx 30rpx;
  background: linear-gradient(#009688, #25cb9b);
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}

.container .search {
  width: 750rpx;
  height: 65rpx;
  padding: 12.5rpx 12.5rpx 15rpx;
  background: linear-gradient(#25cb9b, #69c3aa);
}

.container .search-left {
  flex: 8;
  background: #9be4f0;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: #6e6f6e;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search-right {
  flex: 1;
}

.container .search-right image {
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.search-view {
  position: static;
  left: 0;
  right: 0;
  top: -1;
  z-index: 5;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(#25cb9b, #69c3aa);
  display: flex;
  flex-direction: row;
}

.search-content {
  background: white;
  width: 520rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: auto;
  padding-left: 20rpx;
  padding-bottom: auto;
  margin: 8px;
  height: 65rpx;
  border-radius: 5px 5px;
  z-index: 5;
}

.search-icon {
  width: 50rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input {
  width: 500rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 150rpx;
  height: 65rpx;
  margin-right: 0rpx;
  background-color: blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
  position: relative;
}

.swiper-container {
  width: 750rpx;
  position: relative;
  z-index: 2;
}

.swiper_box {
  width: 100%;
  height: 360rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 360rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}

.td {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  padding: 120rpx 0rpx 100rpx 0rpx;
}

.end {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 250rpx;
  padding: 0rpx 0rpx 100rpx 0rpx;
}

.product-list {
  padding-top: 5rpx;
  box-sizing: border-box;
}

/*条件选择*/

.choice-bar {
  position: static;
  top: 0;
  display: flex;
  width: 100vw;
  font-size: 16px;
  background-color: #fff;
  z-index: 9;
}

.chioce-item {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  width: 50%;
  height: 80rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-left: 1rpx solid #ddd;
  z-index: 2;
  /*border-right: 1rpx solid #ddd;*/
}

.chioce-item-last {
  border-right: none;
}

.chioce-item-first {
  border-left: none;
}

.icon-chioce {
  height: 30rpx;
  width: 30rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
}

.district-list, .sorting-list, .filter-list {
  margin-top: 2rpx;
  position: absolute;
  top: 490rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 5;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
}

.chioce-list-show1 {
  top: 95rpx;
  animation: slide1 1000ms;
}

@keyframes slide1 {
  0% {
    top: 0rpx;
  }

  100% {
    top: 95rpx;
  }
}

.chioce-list-show2 {
  top: 550rpx;
  animation: slide2 1000ms;
}

@keyframes slide2 {
  0% {
    top: 450rpx;
  }

  100% {
    top: 550rpx;
  }
}

.chioce-list-hide {
  display: none !important;
}

/*区域位置*/

.district-list {
  display: flex;
}

.district-left {
  flex-grow: 1;
  z-index: 5;
}

.district-right {
  flex-grow: 4;
  z-index: 5;
  background-color: white;
}

.scroll-district {
  height: 500rpx;
}

.district-parent {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  background-color: #f0f0f0;
}

.district-parent-active {
  background-color: #fff;
}

.district-children {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

/*综合排序*/

.sorting-item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

.icon-selected {
  height: 30rpx;
  width: 30rpx;
}

.filter-footer {
  display: flex;
  justify-content: space-between;
}

.filter-footer button {
  margin: 20rpx 80rpx;
  border-radius: 0 !important;
}

.button-reset {
  border: 1rpx solid #ddd !important;
  color: #666 !important;
}

.click-once {
  background-color: rgba(0, 0, 0, 0.1) !important;
  opacity: 0.7 !important;
}

.click-once-opaque {
  background-color: #f2f2f2 !important;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.chioce-item-hot {
  width: 36%;
  font-size: 13px;
  text-align: center;
  line-height: 100rpx;
  z-index: 5;
  color: #ffffff;
}

.chioceDistrict-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #999;
  z-index: 3;
  left: 0;
  opacity: 0.5;
}

.chioceSorting-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #999;
  z-index: 1;
  left: 0;
  opacity: 0.5;
}
