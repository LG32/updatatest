/* pages/firstpage/firstpage.wxss */
@import "/wxSearch/wxSearch.wxss";
.container{
  height: 1200rpx;
}
.question_title {
  position: relative;
  width: 700rpx;
  padding: 40rpx 50rpx 30rpx;
  background: #298de5;
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}
.container .search{
  width: 750rpx;
  height: 65rpx;
  padding: 12.5rpx  12.5rpx 15rpx;
  background: #298de5;
}
.container .search-left{
  flex: 8;
  background: #9BE4F0;
  text-align: left;
} 
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #6E6F6E;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search-right{
  flex: 1;
}
.container .search-right image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx
}

