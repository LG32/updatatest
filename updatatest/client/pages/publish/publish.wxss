/* pages/publish/publish.wxss */

.container {
  padding: 0;
  font-size: 14rpx;
  background: #f0f4f3;
  color: #000;
}

.question {
  position: relative;
  width: 100%;
  padding: 40rpx 0rpx 30rpx 40rpx;
  background: #1f8788;
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}

.master {
  position: relative;
  margin: 0 auto;
  width: 630rpx;
  height: 90rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #ebebeb;
  border-radius: 3px;
  box-shadow: 0 1px 2px #bebebe;
}

.master-wrp {
  position: relative;
  width: 100%;
  height: 150rpx;
  background: #fff;
}

.master-wrp .bg-half {
  position: absolute;
  top: 0;
  width: 100%;
  height: 75rpx;
  background: #1f8788;
}

.master .avatar {
  flex: 1;
  width: 90rpx;
  height: 90rpx;
}

.master .avatar image {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}

.master .master-info {
  flex: 5;
  text-align: left;
  padding: 10rpx 20rpx;
  line-height: 38rpx;
}

.master .master-info text {
  display: block;
}

.master .master-info .master-name {
  font-size: 32rpx;
}

.master .master-info .master-des {
  font-size: 22rpx;
  color: #808080;
  line-height: 28rpx;
}

.master .follow {
  flex: 2;
  padding: 15rpx 0;
  font-size: 26rpx;
}

.master .follow text {
  display: inline-block;
  padding: 15rpx 20rpx;
  color: #40bcd0;
  border: solid 2px #40bcd0;
  border-radius: 6rpx;
}

.master-content {
  padding: 30rpx 40rpx;
  width: 100%;
  background: #fff;
}

.master-content text {
  font-size: 32rpx;
  color: #454545;
  line-height: 44rpx;
}

.master-content image {
  width: 100%;
  margin: 20rpx 0;
}

.master-footer {
  position: fixed;
  bottom: 0;
  height: 80rpx;
  border-top: solid 1px #ebebeb;
  background: #fff;
  width: 670rpx;
  padding: 20rpx 40rpx;
}

.textarea-placeholder {
  color: #6e6f6e;
  line-height: 20rpx;
}

.container .textarea {
  height: 50rpx;
  padding: 5rpx 5rpx 5rpx;
  background: #9be4f0;
}

.container .textarea-left {
  background: #fff;
  text-align: left;
  padding: 0rpx 15rpx 0rpx 15rpx;
}

.container .textarea-left textarea {
  display: inline-block;
  height: 50rpx;
  font-size: 32rpx;
  width: 100%
}

.container .destextarea {
  height: 125rpx;
  padding: 5rpx 5rpx 5rpx;
  background: #9be4f0;
}

.container .destextarea-left {
  background: #fff;
  text-align: left;
  padding: 5rpx 15rpx 5rpx 15rpx;
}

.container .destextarea-left textarea {
  display: inline-block;
  height: 100%;
  width: 100%;
  font-size: 32rpx;
}

.container .pointtextarea {
  height: 125rpx;
  padding: 5rpx 5rpx 5rpx;
  background: #9be4f0;
}

.container .pointtextarea-left {
  background: #fff;
  text-align: left;
  padding: 5rpx 15rpx 5rpx 15rpx; 
}

.container .pointtextarea-left textarea {
  display: inline-block;
  height: 100%;
  width: 100%;
  font-size: 32rpx;
}

.publish_btn {
  border-radius: 25rpx;
  background-color: #1f8788;
  color: white;
}

.publish_btn::after {
  border: none;
}

.publish_btn:active{
    opacity: 0.8;
}

.distance {
  margin: 15rpx;
}

.distance_btn {
  border: 2px solid #298de5;
  border-radius: 100rpx;
  background-color: white;
}

.distance_btn::after {
  border: none;
}

.copyright {
  font-size: 28rpx;
  color: #999;
  padding: 30rpx;
  text-align: center;
  background-color: #fff;
  width: 100%;
}

.golds-num-box {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-top: 1px solid #eee;
  align-items: center;
  background: #fff;
  width: 690rpx;
}

.num-label {
  font-size: 26rpx;
  color: #000;
}

.golds-num-box .num-box {
  display: flex;
}

.golds-num-box .num-box .num-jian, .golds-num-box .num-box .num-input,
.golds-num-box .num-box .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.golds-num-box .num-box .num-input {
  font-size: 28rpx;
}

.golds-num-box .num-box .num-input input {
  height: 100%;
}

.golds-num-box .num-box .hui {
  background-color: #f5f5f9;
}

.openMap {
  margin: 15rpx;
  display: flex;
}

.openMap_btn {
  border: 2px solid #298de5;
  border-radius: 100rpx;
  background-color: white;
}

.openMap_btn::after {
  border: none;
}