<!--pages/mission/mission.wxml-->
<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">

  <view class='container'>
    <view class='question-view'>
      <text class='question-title'>{{mission_title}}</text>
    </view>

    <view class='master-wrp'>
      <view class='bg-half'>
        <view class='master flex-wrp'>
          <view class='avatar flex-item'>
            <image src='{{userInfo.avatarUrl}}'></image>
          </view>
          <view class='master-info flex-item'>
            <text class='master-name'>{{userInfo.nickName}}</text>
            <text class='master-des'>金币数:{{userInfo.gold}}</text>
            <text class='master-des'>数量:{{item.length}}</text>
          </view>
        </view>
      </view>
    </view>

    <view class='master-content'>
      <text>善良的好人</text>
    </view>
  </view>

  <block wx:for="{{question}}" wx:for-index="idx" wx:for-item data-item="{{idx}}">
    <view class='feed-item'>
      <view class='feed-source'>
        <a class=''>
          <view class='avatar'>
            <image src='{{item.feed_source_img}}'></image>
          </view>
          <text>{{item.feed_source_name}} {{item.question}}</text>
        </a>
        <image wx:if="{{item.question_state == 1}}" class='item-more' mode="aspectFit" src='../../images/icon/icon_mission_finish.jpg'></image>
      </view>
      <view class='feed-content'>
        <navigator url="../answer/answer?question_id={{item.question_id}}">
          <view class='question' qid="{{question_id}}">
            <a class='quesiton-link'>
              <text>{{item.simple_description}}</text>
            </a>
          </view>
          <view class='answer-body'>
            <text class='answer-txt' aid="{{question_id}}">{{item.description}}</text>
            <view class='answer-actions'>
              <view class="like dot">
                <a>{{item.good_num}} 赞同 </a>
              </view>
              <view class="comments dot">
                <a>{{item.comment_num}} 评论 </a>
              </view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </block>
</scroll-view>